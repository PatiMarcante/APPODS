<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3AAE93"
    android:backgroundTint="#94EFE7"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="365dp"
        android:layout_height="122dp"
        android:layout_marginTop="100dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Os Objetivos de Desenvolvimento Sustentável (ODS) são uma agenda mundial adotada durante a Cúpula das Nações Unidas sobre o Desenvolvimento Sustentável em setembro de 2015 composta por 17 objetivos e 169 metas a serem atingidos até 2030.  "
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textIsSelectable="false"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="60dp"
        android:layout_height="59dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/sdg_2" />

    <Button
        android:id="@+id/ODS2"
        android:layout_width="67dp"
        android:layout_height="30dp"
        android:layout_marginStart="34dp"
        android:backgroundTint="#D5A71F"
        android:lineSpacingExtra="0"
        android:rotation="0"
        android:text="ODS 2"
        android:textColor="#000000"
        android:textSize="10dp"
        android:textStyle="italic"
        app:layout_constraintStart_toEndOf="@+id/ODS1"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/ODS3"
        android:layout_width="67dp"
        android:layout_height="30dp"
        android:layout_marginStart="35dp"
        android:backgroundTint="#4CAF50"
        android:lineSpacingExtra="0"
        android:rotation="0"
        android:text="ODS 3"
        android:textColor="#000000"
        android:textSize="10dp"
        android:textStyle="italic"
        app:layout_constraintStart_toEndOf="@+id/ODS2"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <Button
        android:id="@+id/ODS4"
        android:layout_width="67dp"
        android:layout_height="30dp"
        android:layout_marginStart="37dp"
        android:backgroundTint="#E6CF2B1F"
        android:lineSpacingExtra="0"
        android:rotation="0"
        android:text="ODS 4"
        android:textColor="#000000"
        android:textSize="10dp"
        android:textStyle="italic"
        app:layout_constraintStart_toEndOf="@+id/ODS3"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="60dp"
        android:layout_height="59dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toStartOf="@+id/imageView4"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/sdg_3" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="60dp"
        android:layout_height="59dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/sdg_4" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="60dp"
        android:layout_height="59dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/ods1" />

    <Button
        android:id="@+id/ODS1"
        android:layout_width="67dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="#EBE63939"
        android:lineSpacingExtra="0"
        android:rotation="0"
        android:text="ODS 1"
        android:textColor="#000000"
        android:textSize="10dp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

</android.support.constraint.ConstraintLayout>